{
  "extends": "./tsconfig.base.json",
  "include": ["src/**/*", ".next/types/**/*.ts"],
  "exclude": ["node_modules"],
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "dist",
    "paths": { "~/*": ["src/*"] },
    "skipLibCheck": true,
    "noEmit": true,
    "lib": ["dom", "es2023"],
    "strictNullChecks": true
  }
}
