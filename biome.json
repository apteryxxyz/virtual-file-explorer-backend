{
  "$schema": "https://biomejs.dev/schemas/1.5.3/schema.json",
  "files": {
    "ignore": [
      "node_modules/*",
      "dist/*",
      ".next/*",
      ".plasmo/*",
      "build/*",
      "generated/*"
    ]
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "indentWidth": 2,
    "lineEnding": "lf"
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "style": {
        "noNonNullAssertion": "off",
        "noUselessElse": "off",
        "noParameterAssign": "off",
        "noCommaOperator": "off"
      },
      "suspicious": {
        "noAssignInExpressions": "off",
        "noArrayIndexKey": "off"
      },
      "nursery": {
        "recommended": true,
        "useFocusableInteractive": "off",
        "useSemanticElements": "off",
        "useSortedClasses": {
          "options": {
            "attributes": ["className"],
            "functions": ["cn"]
          }
        }
      }
    }
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "single",
      "jsxQuoteStyle": "double",
      "semicolons": "always"
    }
  }
}
